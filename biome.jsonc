{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"maxSize": 2048000,
		"includes": [
			"src/**/*.ts",
			"scripts/**/*.ts",
			"tools/**/*.ts",
			"!**/*.d.ts",
			"!**/dist",
			"!**/node_modules",
			"!src/data-legacy",
			"!src/extras",
			"!src/migration",
			"!src/pkg-core",
			"!src/builders"
		]
	},
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "warn",
				"noUnusedFunctionParameters": "warn",
				"noUnsafeFinally": "warn"
			},
			"style": {
				"noNamespace": "warn",
				"useConsistentArrayType": "off",
				"useImportType": "error",
				"useNamingConvention": {
					"level": "off",
					"options": { "strictCase": false }
				},
				"noNonNullAssertion": "warn",
				"useEnumInitializers": "warn",
				"useLiteralEnumMembers": "warn"
			},
			"suspicious": {
				"noEmptyInterface": "warn",
				"noRedeclare": "warn",
				"noExplicitAny": "off",
				"noTemplateCurlyInString": "warn",
				"useAdjacentOverloadSignatures": "warn",
				"noThenProperty": "warn",
				"useIterableCallbackReturn": "warn",
				"noImplicitAnyLet": "warn",
				"noShadowRestrictedNames": "warn"
			},
			"complexity": {
				"noThisInStatic": "warn",
				"noBannedTypes": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"jsxQuoteStyle": "single",
			"quoteStyle": "single",
			"trailingCommas": "none"
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
