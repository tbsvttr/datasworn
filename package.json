{
  "name": "@datasworn/tools",
  "version": "0.1.0",
  "description": "Internal tools used to develop Datasworn packages.",
  "type": "module",
  "private": true,
  "engines": {
    "bun": ">=1.3.0"
  },
  "workspaces": [
    "pkg/nodejs/@datasworn/core",
    "pkg/nodejs/@datasworn/ironsworn-classic",
    "pkg/nodejs/@datasworn/ironsworn-classic-delve",
    "pkg/nodejs/@datasworn/starforged",
    "pkg/nodejs/@datasworn/sundered-isles"
  ],
  "scripts": {
    "test": "bun test",
    "test:build": "bun test src/tests/build.test.ts",
    "check": "tsc --project tsconfig.json --noEmit",
    "build:schema": "bun ./src/scripts/schema/buildSchema.ts",
    "build:jtd": "bun ./src/scripts/json-typedef/index.ts",
    "build:dts": "bun ./src/scripts/codegen/writeTypescriptTypes.ts",
    "build:json": "bun ./src/scripts/datasworn/writeDatasworn.ts",
    "build:pkg": "bun ./src/scripts/pkg/nodejs/buildPackages.ts && tsc --project ./src/pkg-core/tsconfig.json",
    "build": "bun ./src/scripts/pkg/nodejs/updatePackageVersions.ts && bun run build:schema && bun run build:jtd && bun run build:dts && bun run build:json && bun run build:pkg",
    "pkg:node": "bun ./src/scripts/pkg/nodejs/publishPackages.ts",
    "release": "npm run release --workspaces",
    "viewer": "cd tools/viewer && bun install && bun run dev",
    "viewer:build": "cd tools/viewer && bun install && bun run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tbsvttr/datasworn.git"
  },
  "keywords": [
    "ironsworn",
    "starforged",
    "TTRPG"
  ],
  "author": {
    "name": "rsek",
    "email": "r.sekouri@gmail.com",
    "url": "https://github.com/rsek"
  },
  "contributors": [
    {
      "name": "tbsvttr",
      "url": "https://github.com/tbsvttr"
    }
  ],
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/tbsvttr/datasworn/issues"
  },
  "homepage": "https://github.com/tbsvttr/datasworn#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@release-it/bumper": "^7.0.0",
    "@types/bun": "^1.3.0",
    "@types/json-pointer": "^1.0.34",
    "@types/json-schema": "^7.0.15",
    "@types/lodash-es": "^4.17.12",
    "esbuild": "^0.27.2",
    "json-schema": "^0.4.0",
    "release-it": "^19.0.0",
    "tsconfig-paths": "^4.2.0",
    "type-fest": "^5.3.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.41",
    "@sinclair/typebox-codegen": "^0.11.1",
    "@swc/core": "^1.7.10",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "json-pointer": "^0.6.2",
    "json-schema-library": "^10.0.0-rc2",
    "jtd": "^0.1.1",
    "lodash-es": "^4.17.21",
    "remark": "^15.0.1",
    "semver": "^7.6.3",
    "winston": "^3.14.1",
    "yaml": "^2.5.0"
  },
  "overrides": {
    "cross-spawn": "^7.0.6",
    "micromatch": "^4.0.8"
  }
}
